---
import NavigationBar from '@components/navigation/NavigationBar.astro';

interface Props {
  title?: string
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
    <title>{title}</title>
	</head>
	<body class="dark:bg-black dark:text-white">
    <div id="app" class="relative h-screen px-10 2xl:px-56">
      <header class="[grid-area:header]">
        <NavigationBar />
      </header>
      <main class="[grid-area:main]">
        <slot />
      </main>
      <footer class="[grid-area:footer] min-h-20">
      </footer>
    </div>
  </body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
}
#app {
  display: grid;
  grid-template-areas: "header header header"
                       "aside main main"
                       "footer footer footer";
  grid-template-columns: auto 1fr;
  grid-template-rows: auto 1fr auto;
}


</style>
